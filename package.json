{
  "name": "nestjs-k6",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "start": "turbo run start",
    "test": "turbo run test",
    "test:report": "turbo run test:report",
    "check-types": "turbo run check-types",
    "prepare": "lefthook install",
    "lint": "oxlint .",
    "lint:fix": "oxlint --fix .",
    "format": "oxfmt --check",
    "format:fix": "oxfmt ."
  },
  "devDependencies": {
    "@evilmartians/lefthook": "^2.1.1",
    "oxfmt": "^0.33.0",
    "oxlint": "^1.48.0",
    "turbo": "^2.8.9"
  },
  "packageManager": "bun@1.3.5"
}
